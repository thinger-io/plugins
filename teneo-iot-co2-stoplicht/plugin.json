        "enabled": true,
        "name": "Teneo-Iot CO2-STOPLICHT",
        "product": "teneo_iot_co2_stoplicht",
        "profile": {
          "api": {
            "downlink": {
              "enabled": true,
              "handle_connectivity": false,
              "request": {
