{
  "name": "chirpstack",
  "version": "1.1.0",
  "description": "Plugin for integrating Thinger.io with ChirpStack LNS",
  "author": "Thinger.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinger-io/plugins.git",
    "directory": "chirpstack"
  },
  "metadata": {
    "name": "ChirpStack",
    "description": "Chirpstack Integration",
    "category": "connectivity",
    "image": "assets/chirpstack-image.png",
    "icon": "assets/chirpstack-icon.png"
  },
  "tokens": {
    "chirpstack_plugin": {
      "name": "Access from ChirpStack plugin to Thinger.io account",
      "allow": {
        "Device": {
          "*": [
            "AccessDeviceResources",
            "CreateDeviceProperty",
            "ReadDeviceProperty"
          ]
        },
        "Plugin": {
          "chirpstack": "*"
        }
      }
    },
    "chirpstack_plugin_callback": {
      "name": "Access from ChirpStack to Uplink callback",
      "allow": {
        "Plugin": {
          "ttn": [
            "CallPluginEndpoint"
          ]
        }
      }
    }
  },
  "task": {
    "type": "docker",
    "image": "thinger/chirpstack-plugin",
    "port": 3000
  },
  "interface": {
    "main": {
      "proxy_to": {
        "plugin": "chirpstack",
        "port": 3000
      }
    }
  }
}
